// Define a variable to store the pin numberint motionPin = 2;// The setup function runs once when you press reset or power the boardvoid setup(){    Serial.begin(9600);  pinMode(motionPin, INPUT);    pinMode(LED_BUILTIN, OUTPUT);  }// The loop function runs over and over again forevervoid loop (){    // Add a delay between each loop  delay(1000);    // Fetch the current motion sensor status  int motionResult = digitalRead(motionPin);    // Output the current motion sensor result  Serial.println(motionResult);    // Turn the bulit-in LED on or off based on the motino sensor status  if (motionResult == HIGH) {    digitalWrite(LED_BUILTIN, HIGH);  } else {    digitalWrite(LED_BUILTIN, LOW);  }  }